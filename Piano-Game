import math
import pygame
from array import array
import time

pygame.init()
pygame.mixer.pre_init(22050, -16, 1, 512)
pygame.mixer.init()

# ØªÙ†Ø¸ÛŒÙ…Ø§Øª ØµÙØ­Ù‡
WIDTH, HEIGHT = 900, 400
screen = pygame.display.set_mode((WIDTH, HEIGHT))
pygame.display.set_caption("ğŸ¹ Piano â€” Real-time Sound & Note Growth")

# Ù†ÙØªâ€ŒÙ‡Ø§
NOTES = [
    ("C4", 261.63),
    ("D4", 293.66),
    ("E4", 329.63),
    ("F4", 349.23),
    ("G4", 392.00),
    ("A4", 440.00),
    ("B4", 493.88),
    ("C5", 523.25)
]

# ØªØ§Ø¨Ø¹ Ø³Ø§Ø®Øª ØµØ¯Ø§ (Ù…ÙˆØ¬ Ø³ÛŒÙ†ÙˆØ³ÛŒ Ù¾ÛŒÙˆØ³ØªÙ‡)
def make_loop_sound(freq, vol=0.6):
    samples = int(22050 * 2)  # Ø·ÙˆÙ„ Û² Ø«Ø§Ù†ÛŒÙ‡â€ŒØ§ÛŒ Ø¨Ø±Ø§ÛŒ Ù„ÙˆÙ¾ (Ú©Ø§ÙÛŒÙ‡)
    arr = array("h")
    amp = int(32767 * vol)
    for i in range(samples):
        t = i / 22050
        val = math.sin(2 * math.pi * freq * t)
        arr.append(int(amp * val))
    sound = pygame.mixer.Sound(buffer=arr.tobytes())
    return sound

# Ø³Ø§Ø®Øª ØµØ¯Ø§Ù‡Ø§
sounds = [make_loop_sound(f) for _, f in NOTES]

# Ú©Ù„ÛŒØ¯Ù‡Ø§
key_w = WIDTH // len(NOTES)
keys = [pygame.Rect(i * key_w, 0, key_w, 200) for i in range(len(NOTES))]

# ÙˆØ¶Ø¹ÛŒØª Ù†ÙØªâ€ŒÙ‡Ø§
pressed = [False] * len(NOTES)
press_start = [0.0] * len(NOTES)
channels = [None] * len(NOTES)
falling_notes = []
growing_notes = {}

clock = pygame.time.Clock()
running = True

while running:
    for e in pygame.event.get():
        if e.type == pygame.QUIT:
            running = False
        elif e.type == pygame.MOUSEBUTTONDOWN:
            x, y = e.pos
            for i, rect in enumerate(keys):
                if rect.collidepoint(x, y) and not pressed[i]:
                    pressed[i] = True
                    press_start[i] = time.time()

                    # Ø´Ø±ÙˆØ¹ Ù¾Ø®Ø´ ØµØ¯Ø§ Ø¯Ø± Ù„ÙˆÙ¾
                    channels[i] = pygame.mixer.find_channel(True)
                    if channels[i]:
                        channels[i].play(sounds[i], loops=-1)

                    # Ø´Ø±ÙˆØ¹ Ø±Ø´Ø¯ Ù…Ø³ØªØ·ÛŒÙ„
                    growing_notes[i] = {
                        "x": rect.x + rect.width // 2 - 10,
                        "width": 20,
                        "y": rect.bottom,
                        "length": 0,
                        "color": (120, 180, 255)
                    }

        elif e.type == pygame.MOUSEBUTTONUP:
            for i in range(len(keys)):
                if pressed[i]:
                    pressed[i] = False
                    # Ù…ØªÙˆÙ‚Ù Ú©Ø±Ø¯Ù† ØµØ¯Ø§
                    if channels[i]:
                        channels[i].stop()
                    # Ú¯Ø±ÙØªÙ† Ù…Ø³ØªØ·ÛŒÙ„ Ø¯Ø± Ø­Ø§Ù„ Ø±Ø´Ø¯
                    if i in growing_notes:
                        note = growing_notes.pop(i)
                        falling_notes.append(note)

    # Ø±Ø´Ø¯ Ù…Ø³ØªØ·ÛŒÙ„ Ù‡Ù†Ú¯Ø§Ù… Ù†Ú¯Ù‡ Ø¯Ø§Ø´ØªÙ†
    for i in list(growing_notes.keys()):
        growing_notes[i]["length"] += 4

    # Ø§ÙØªØ§Ø¯Ù† Ù†ÙØªâ€ŒÙ‡Ø§
    for note in falling_notes:
        note["y"] += 3
    falling_notes = [n for n in falling_notes if n["y"] < HEIGHT + 60]

    # Ø±Ø³Ù…
    screen.fill((25, 25, 25))

    for i, rect in enumerate(keys):
        col = (255, 255, 255) if not pressed[i] else (180, 200, 255)
        pygame.draw.rect(screen, col, rect)
        pygame.draw.rect(screen, (0, 0, 0), rect, 2)
        font = pygame.font.SysFont(None, 24)
        txt = font.render(NOTES[i][0], True, (0, 0, 0))
        screen.blit(txt, (rect.x + rect.width // 2 - txt.get_width() // 2, rect.bottom - 25))

    # Ù…Ø³ØªØ·ÛŒÙ„â€ŒÙ‡Ø§ÛŒ Ø¯Ø± Ø­Ø§Ù„ Ø±Ø´Ø¯
    for note in growing_notes.values():
        pygame.draw.rect(screen, note["color"], (note["x"], note["y"], note["width"], note["length"]))

    # Ù…Ø³ØªØ·ÛŒÙ„â€ŒÙ‡Ø§ÛŒ Ø¯Ø± Ø­Ø§Ù„ Ø§ÙØªØ§Ø¯Ù†
    for note in falling_notes:
        pygame.draw.rect(screen, note["color"], (note["x"], note["y"], note["width"], note["length"]))

    pygame.display.flip()
    clock.tick(60)

pygame.quit()
